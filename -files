[32m+[m[32m          FROM tweets[m[41m [m
[32m+[m[32m          LEFT JOIN likes ON tweets.id = likes.tweet_id[m[41m [m
[32m+[m[32m          GROUP BY tweets.id[m[41m [m
[32m+[m[32m          ORDER BY total_likes DESC[m[41m [m
[32m+[m[32m          LIMIT 10";[m
[32m+[m[32m$result = mysqli_query($conn, $query);[m
[32m+[m
[32m+[m[32m// Cek apakah user sudah login[m
[32m+[m[32mif (!isset($_SESSION['user_id'])) {[m
[32m+[m[32m    header("Location: login.php");[m
