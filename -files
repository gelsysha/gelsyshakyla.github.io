[32m+[m
[32m+[m
[32m+[m[41m    [m
[32m+[m[32m    // Upload file jika ada[m
[32m+[m[32m    $attachment = null;[m
[32m+[m[32m    if (!empty($_FILES['attachment']['name'])) {[m
[32m+[m[32m        $target_dir = "uploads/";[m
[32m+[m[32m        if (!is_dir($target_dir)) {[m
[32m+[m[32m            mkdir($target_dir, 0777, true);[m
[32m+[m[32m        }[m
[32m+[m[32m        $target_file = $target_dir . basename($_FILES["attachment"]["name"]);[m
[32m+[m[32m        move_uploaded_file($_FILES["attachment"]["tmp_name"], $target_file);[m
[32m+[m[32m        $attachment = $target_file;[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    // Simpan ke database[m
[32m+[m[32m    $stmt = $conn->prepare("INSERT INTO tweets (user_id, content, attachment) VALUES (?, ?, ?)");[m
[32m+[m[32m    $stmt->bind_param("iss", $user_id, $content, $attachment);[m
[32m+[m[32m    $stmt->execute();[m
[32m+[m[41m    [m
[32m+[m[32m    // Refresh halaman setelah tweet[m
[32m+[m[32m    header("Location: index.php");[m
[32m+[m[32m    exit();[m
[32m+[m[32m}[m
